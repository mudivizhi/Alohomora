<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".offer_detail"
    android:paddingTop="60dp"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/zomato" />

    <TextView
        android:id="@+id/brief_offer_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_image"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="25sp"
        android:text="Upto 70% Off on Electronics + 10% Discount on Axis Bank Cards" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/copy"
        android:layout_below="@id/brief_offer_detail"
        android:layout_marginTop="24dp"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:text="COPY THIS CODE AND USE AT CHECKOUT"/>

    <TextView
        android:id="@+id/coupon_code"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_below="@+id/copy"
        android:background="@drawable/btn"
        android:text="@string/a1b2c3"
        android:textSize="40sp"
        android:paddingRight="20dp"
        android:gravity="center"
       android:drawableRight="@drawable/ic_content_copy_black_24dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        />

    <TextView
        android:id="@+id/add_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/coupon_code"
        android:layout_marginTop="34dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="20dp"
        android:text="Other text loreum ipsum nigam limum opium posum ostreuiod Other text loreum ipsum nigam limum opium posum ostreuiod " />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/did_work"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_info"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="13dp"
        android:layout_marginRight="20dp"
        android:text="Did it work?"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/worked"
        android:layout_width="39dp"
        android:layout_height="36dp"
        android:layout_below="@+id/did_work"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ic_favorite_black_24dp" />

    <TextView
        android:id="@+id/not_worked"
        android:layout_width="39dp"
        android:layout_height="36dp"
        android:layout_below="@+id/did_work"
        android:layout_alignEnd="@+id/did_work"
        android:layout_alignRight="@+id/did_work"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:drawableLeft="@drawable/ic_thumb_down_black_24dp" />

    <TextView
        android:id="@+id/share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_info"
        android:layout_alignEnd="@+id/add_info"
        android:layout_alignRight="@+id/add_info"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="34dp"
        android:layout_marginRight="34dp"
        android:textSize="20sp"
        android:text="Share" />

    <TextView
        android:layout_width="35dp"
        android:layout_height="34dp"
        android:layout_below="@+id/share"
        android:layout_alignEnd="@+id/share"
        android:layout_alignRight="@+id/share"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/ic_share_black_24dp" />


</RelativeLayout>